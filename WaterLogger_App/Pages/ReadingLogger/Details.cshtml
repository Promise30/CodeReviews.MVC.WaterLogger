@page
@model HabitLogger_App.Pages.ReadingLogger.DetailsModel
@{
    ViewData["Title"] = "Reading Log Details";
}
<h2>Reading Log Details</h2>
<br />
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ReadingLogsList[0].Date)</th>
            <th>@Html.DisplayNameFor(model => model.ReadingLogsList[0].Book.Title)</th>
            <th>@Html.DisplayNameFor(model => model.ReadingLogsList[0].PagesRead)</th>
            <th>@Html.DisplayNameFor(model => model.ReadingLogsList[0].MinutesRead)</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.ReadingLogsList)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.PagesRead)</td>
                <td>@Html.DisplayFor(modelItem => item.MinutesRead)</td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-page="/ReadingLogger/Update" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-area="" asp-page="/ReadingLogger/Delete" asp-route-id="@item.Id">Delete</a>
                 </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="/Books/Index">Back to List</a>
</div>
