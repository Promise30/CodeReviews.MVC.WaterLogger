@page
@model HabitLogger_App.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Add New Book";
}
<h2>Add New Book</h2>
<br />
<div class="row">
    <div class="col-md-5">
        <form method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title"></label>
                <input type="text" asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author"></label>
                <input type="text" asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Rating"></label>
                <input type="number" asp-for="Book.Rating" class="form-control" step="0.1" min="0" max="5" />
                <span asp-validation-for="Book.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <a class="btn btn-secondary" asp-area="" asp-page="/Books/Index">Back To List</a>
        </form>
    </div>
</div>
